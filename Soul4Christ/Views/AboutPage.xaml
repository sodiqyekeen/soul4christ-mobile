<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Soul4Christ.Views.AboutPage"
             Visual="Material"
             Title="About">
    <ScrollView>
        <Grid BackgroundColor="White">
            <BoxView Opacity="0.7" BackgroundColor="#0f0f0f6b" Margin="20" CornerRadius="10" />
            <StackLayout Padding="30" Spacing="20">
                <Label Text="The Souls for Christ Ministry" TextColor="Black" FontSize="26" HorizontalOptions="CenterAndExpand" />
                <Label Text="Jesus' mission was the Father's mission. He gave His disciples and us that same mission in His first appearance after His resurrection." 
                       TextColor="Black" FontSize="Large" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>